		"clean": "rimraf build/",
		"lint:scripts": "eslint '*.js' 'src/**/*.js' --ignore-pattern 'src/_js/packages/**/*.js'",
		"lint:styles": "stylelint 'src/**/*.css'",
		"lint:pkg": "npmPkgJsonLint .",
		"lint:php": "composer lint-detail",
		"start": "run-p 'build:*'",
		"test": "run-p 'lint:*'"
	}
