		"lint:styles": "stylelint 'src/**/*.css'",
		"lint:pkg": "npmPkgJsonLint .",
		"lint:php": "composer lint",
		"fix:scripts": "eslint --fix '*.js' 'src/**/*.js'",
		"fix:php": "composer format",
		"start": "run-p 'build:*'",
		"fix": "run-p 'fix:*'",
		"test": "run-p 'lint:*'"
	}
